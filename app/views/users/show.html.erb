<% provide(:title, @user.nomeCompleto) %>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-8">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size: 200 %>
        Nome: <%= @user.nomeCompleto %></br>
        Login: <%= @user.login %>
      </h1>
      <p>Email: <%= @user.email %></p>      
      <p> Cidade: <%= @user.cidade %></p>
      <p> Estado: <%= @user.estado %></p>
      <p> Descrição: <%= @user.descricao %></p>
    </section>
  </div> 
</div></br>
 <div class="col-md-5"></div>
<div class="col-md-3">
	<% if !current_user.admin? && current_user?(@user) %>
	<%= link_to "Apagar perfil", @user, method: :delete,
	  data: { confirm: "Você esta certo disso?" }, class: "btn btn-primary" %>
	<% end %>  
</div>